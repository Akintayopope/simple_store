<h1>All Products</h1>

<table border="1" cellpadding="8" cellspacing="0">
  <thead>
    <tr>
      <th>Title</th>
      <th>Price</th>
      <th>Stock Quantity</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td>$<%= '%.2f' % product.price %></td>
        <td><%= product.stock_quantity %></td>
      </tr>
    <% end %>
  </tbody>
</table>
